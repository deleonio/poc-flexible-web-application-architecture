{
  "name": "poc-flexible-web-application-architecture",
  "version": "1.0.0",
  "private": true,
  "description": "This project demonstrate a flexible Babel and Webpack based web application architecture.",
  "author": {
    "name": "Martin Oppitz",
    "email": "github@martinoppitz.com",
    "url": "http://martinoppitz.com"
  },
  "scripts": {
    "ng:serve": "ng serve",
    "ng:build": "ng build --prod --single-bundle",
    "build": "webpack --mode production --framework",
    "build-all": "yarn build angular && yarn build angularjs && yarn build  aurelia && yarn build inferno && yarn build preact && yarn build react && yarn build svelte && yarn build vue",
    "commit": "git add . && git commit && git push",
    "clear": "rm -rf .nyc_output coverage dist tests_output *.log",
    "coverage": "cross-env NODE_ENV=test nyc mocha && nyc check-coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "e2e": "nightwatch",
    "reinstall": "rm -rf node_modules && yarn",
    "serve": "webpack-dev-server --colors --devtool source-map --progress --framework",
    "storybook:serve": "start-storybook",
    "storybook:build": "build-storybook",
    "test": "cross-env NODE_ENV=test mocha --watch-extensions ts",
    "vue:serve": "vue-cli-service serve src/vue.ts",
    "vue:build": "vue-cli-service build src/vue.ts",
    "update": "yarn && yarn upgrade && yarn outdated"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "pre-push": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "**/*.{html,js,json,jsx,svelte,ts,tsx,vue}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/common": "next",
    "@angular/compiler": "next",
    "@angular/core": "next",
    "@angular/forms": "next",
    "@angular/platform-browser": "next",
    "@angular/platform-browser-dynamic": "next",
    "@vue/composition-api": "~0.3.0",
    "angular": "~1.7.0",
    "aurelia-framework": "~1.3.0",
    "core-js": "~3.4.0",
    "inferno": "~7.3.0",
    "navigo": "~7.1.0",
    "preact": "~10.0.2",
    "react": "~16.11.0",
    "react-dom": "~16.11.0",
    "register-service-worker": "~1.6.0",
    "rxjs": "~6.5.0",
    "svelte": "next",
    "vue": "~2.6.0",
    "zone.js": "~0.10.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "next",
    "@angular/cli": "next",
    "@angular/compiler-cli": "next",
    "@babel/core": "~7.7.0",
    "@babel/plugin-proposal-class-properties": "~7.7.0",
    "@babel/plugin-proposal-decorators": "~7.7.0",
    "@babel/plugin-transform-react-jsx": "~7.7.0",
    "@babel/preset-env": "~7.7.0",
    "@babel/preset-typescript": "~7.7.0",
    "@babel/register": "~7.7.0",
    "@ngtools/webpack": "next",
    "@storybook/addon-actions": "~5.2.4",
    "@storybook/addon-links": "~5.2.4",
    "@storybook/addons": "~5.2.4",
    "@storybook/vue": "~5.2.4",
    "@types/mocha": "~5.2.0",
    "@types/node": "~12.12.0",
    "@types/react": "~16.9.0",
    "@vue/cli-plugin-typescript": "~4.0.0",
    "@vue/cli-service": "~4.0.0",
    "aurelia-bootstrapper": "2.3.3",
    "aurelia-dependency-injection": "1.5.1",
    "aurelia-path": "1.1.5",
    "aurelia-templating": "1.10.2",
    "aurelia-webpack-plugin": "4.0.0",
    "babel-loader": "~8.0.0",
    "babel-plugin-angularjs-annotate": "~0.10.0",
    "babel-plugin-inferno": "~6.1.0",
    "babel-plugin-istanbul": "~5.2.0",
    "babel-plugin-transform-vue-template": "~0.4.0",
    "babel-preset-vue": "~2.0.0",
    "chai": "~4.2.0",
    "chromedriver": "~78.0.0",
    "copy-webpack-plugin": "~5.0.0",
    "coveralls": "~3.0.0",
    "cross-env": "~6.0.3",
    "css-loader": "~3.2.0",
    "eslint": "~6.6.0",
    "esm": "~3.2.0",
    "husky": "~3.0.0",
