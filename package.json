{
  "name": "poc-flexible-web-application-architecture",
  "version": "1.0.0",
  "private": true,
  "description": "This project demonstrate a flexible Babel and Webpack based web application architecture.",
  "author": {
    "name": "Martin Oppitz",
    "email": "github@martinoppitz.com",
    "url": "http://martinoppitz.com"
  },
  "scripts": {
    "build": "lean build --gzip",
    "build-all": "rm -rf dist && lean build --gzip --framework angular && lean build --gzip --framework angularjs && lean build --gzip --framework aurelia && lean build --gzip --framework inferno && lean build --gzip --framework preact && lean build --gzip --framework react && lean build --gzip --framework svelte && lean build --gzip && lean build --gzip --framework vue",
    "clear": "rm -rf .nyc_output coverage dist storybook-static tests_output *.log",
    "coverage": "lean coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "e2e": "lean e2e",
    "ng:serve": "ng serve",
    "ng:build": "ng build --prod",
    "reinstall": "rm -rf node_modules package-lock.json && npm install --no-save",
    "serve": "lean serve",
    "storybook:serve": "start-storybook",
    "storybook:build": "build-storybook",
    "test": "lean test",
    "vue:serve": "vue-cli-service serve src/vue.ts",
    "vue:build": "vue-cli-service build src/vue.ts --prod",
    "update": "npm install --no-save && npm update --no-save && npm outdated"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged && lean test && lean e2e -h"
    }
  },
  "lint-staged": {
    "**/*.{html,js,json,jsx,ts,tsx,vue,yml}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/common": "~9.0.0-rc",
    "@angular/compiler": "~9.0.0-rc",
    "@angular/compiler-cli": "~9.0.0-rc",
    "@angular/core": "~9.0.0-rc",
    "@angular/forms": "~9.0.0-rc",
    "@angular/platform-browser": "~9.0.0-rc",
    "@angular/platform-browser-dynamic": "~9.0.0-rc",
    "@leanup/features": "~1.0.0-rc",
    "@leanup/material-preact": "~1.0.0-rc",
    "@material/dom": "~4.0.0",
    "@material/button": "~4.0.0",
    "@material/slider": "~4.0.0",
    "@material/textfield": "~4.0.0",
    "@types/react": "~16.9.0",
    "@vue/composition-api": "~0.3.0",
    "angular": "~1.7.0",
    "aurelia-bootstrapper": "~2.3.0",
    "aurelia-framework": "~1.3.0",
    "core-js": "~3.6.0",
    "inferno": "~7.3.0",
    "navigo": "~7.1.0",
    "preact": "~10.2.0",
    "react": "~16.12.0",
    "react-dom": "~16.12.0",
    "register-service-worker": "~1.6.0",
    "svelte": "~3.17.0",
    "vue": "~2.6.0",
    "vuetify": "~2.2.0",
    "vue-template-compiler": "~2.6.0",
    "zone.js": "~0.10.0"
  },
  "devDependencies": {
    "@leanup/cli": "~1.0.0-rc",
    "@leanup/cli-addons": "~1.0.0-rc",
    "@leanup/cli-angular": "~1.0.0-rc",
    "@leanup/cli-angularjs": "~1.0.0-rc",
    "@leanup/cli-aurelia": "~1.0.0-rc",
    "@leanup/cli-inferno": "~1.0.0-rc",
    "@leanup/cli-preact": "~1.0.0-rc",
    "@leanup/cli-react": "~1.0.0-rc",
    "@leanup/cli-svelte": "~1.0.0-rc",
    "@leanup/cli-vue": "~1.0.0-rc",
    "chromedriver": "~79.0.0",
    "coveralls": "~3.0.0",
    "husky": "~4.0.0",
    "lint-staged": "~10.0.0",
    "sass-convert": "~0.5.0",
    "sass-lint": "~1.13.0",
    "typescript": "~3.6.0"
  }
}
